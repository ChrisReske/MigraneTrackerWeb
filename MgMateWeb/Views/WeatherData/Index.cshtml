@using MgMateWeb.Models.WeatherModels
@model MgMateWeb.Models.WeatherModels.WeatherDataFormModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="GetWeatherData">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class=""></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class=""></span>
            </div>
            <div class="form-group">
                <label asp-for="MeasurementUnit" class="control-label"></label>
                <select asp-for="@Model.MeasurementUnit"
                        asp-items="Html.GetEnumSelectList<MeasurementUnit>()"
                        class="form-control dropdown"></select>
                <span asp-validation-for="MeasurementUnit" class=""></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Get weather data" class="btn btn-lg btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}