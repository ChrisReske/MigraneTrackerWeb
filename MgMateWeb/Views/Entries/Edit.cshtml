@model MgMateWeb.Dto.EntryDto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Entry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreationDate"/>
            <input type="hidden" asp-for="LastChangedAt"/>
            <div class="form-group">
                <label asp-for="HoursOfPain" class="control-label"></label>
                <input asp-for="HoursOfPain" class="form-control" />
                <span asp-validation-for="HoursOfPain" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="WasPainIncreasedDuringPhysicalActivity" /> @Html.DisplayNameFor(model => model.WasPainIncreasedDuringPhysicalActivity)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="HoursOfIncapacitation" class="control-label"></label>
                <input asp-for="HoursOfIncapacitation" class="form-control" />
                <span asp-validation-for="HoursOfIncapacitation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoursOfActivity" class="control-label"></label>
                <input asp-for="HoursOfActivity" class="form-control" />
                <span asp-validation-for="HoursOfActivity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
