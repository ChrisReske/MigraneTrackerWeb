@model IEnumerable<MgMateWeb.Models.EntryModels.Entry>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoursOfPain)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WasPainIncreasedDuringPhysicalActivity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoursOfIncapacitation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoursOfActivity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoursOfPain)
            </td>
            <td>
                @Html.DisplayTextFor(modelItem => item.WasPainIncreasedDuringPhysicalActivity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoursOfIncapacitation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoursOfActivity)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
