@using MgMateWeb.Models.EntryModels
@model MgMateWeb.Models.EntryModels.EntryFormModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Entry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PainTypes" class="control-label"></label>
                @Html.ListBoxFor(m => m.PainTypes, 
                    new MultiSelectList(Model.PainTypes, "Id", "Description"), 
                    new
                    {
                        @class="form-control", 
                        multiple="multiple", 
                        id="painTypeDropdown"
                    })
                <span asp-validation-for="PainTypes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PainIntensity" class="control-label"></label>
                <select 
                    asp-for="PainIntensity" 
                    asp-items="Html.GetEnumSelectList<PainIntensity>()"
                    class="form-control dropdown"></select>
                <span asp-validation-for="PainIntensity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoursOfPain" class="control-label"></label>
                <input asp-for="HoursOfPain" class="form-control" />
                <span asp-validation-for="HoursOfPain" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" 
                           asp-for="WasPainIncreasedDuringPhysicalActivity" /> 
                    @Html.DisplayNameFor(model => model.WasPainIncreasedDuringPhysicalActivity)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="HoursOfIncapacitation" class="control-label"></label>
                <input asp-for="HoursOfIncapacitation" class="form-control" />
                <span asp-validation-for="HoursOfIncapacitation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoursOfActivity" class="control-label"></label>
                <input asp-for="HoursOfActivity" class="form-control" />
                <span asp-validation-for="HoursOfActivity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccompanyingSymptoms"></label>
                @Html.ListBoxFor(m => m.SelectedSymptoms, 
                    new MultiSelectList(Model.AccompanyingSymptoms, "Id", "Description"), 
                    new
                    {
                        @class="form-control", 
                        multiple="multiple", 
                        id="accompanyingSystemDropdown"
                    })
            </div>
            <div class="form-group">
                <label asp-for="Triggers" class="control-label"></label>
                @Html.ListBoxFor(m => m.Triggers,
                    new MultiSelectList(Model.Triggers, "Id", "Description"),
                    new
                    {
                        @class = "form-control", 
                        multiple = "multiple", 
                        id = "triggerDropdown"
                    })
                <span asp-validation-for="Triggers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medications" class="control-label"></label>
                @Html.ListBoxFor(m => m.Medications,
                    new MultiSelectList(Model.Medications, "Id", "Description"),
                    new
                    {
                        @class = "form-control", 
                        multiple = "multiple", 
                        id = "medicationsDropdown"
                    })
                <span asp-validation-for="Medications" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WeatherData" class="control-label"></label>
                @Html.ListBoxFor(m => m.WeatherData, new MultiSelectList(Model.WeatherData, "Id", "CreationDate"),
                    new
                    {
                        @class="form-control",
                        multiple = "multiple",
                        id="weatherDataDropdown"
                    })
                <span asp-validation-for="WeatherData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
